$('#answerbutton').on('click', function () {
      var text = document.getElementById("ans").value;
      var texte = text.trim().toLowerCase();

      $.ajax({
        type: "post",
        url: '/validateAnswer/',
        data: { name: texte },
        success: function (jd) {

          if (jd.data == "1") {
            
            $(".wrong").replaceWith("<p class='wrong'></p>");
            jQuery("#myModal").modal('toggle');

            $(".first").replaceWith("<img src='" + jd.path[0] + "' class='first'>");
            $(".second").replaceWith("<img src='" + jd.path[1] + "' class='second'>");
            $(".third").replaceWith("<img src='" + jd.path[2] + "' class='third'>");
            $("#ans").val('');

            $("#levelno").text("üèÜ " + (jd.number + 1));
            $("#compeletedLevel").text("Level " + jd.number + " üÜô");
            $(".match").replaceWith(" <div class='match'>üòé "+jd.curTeam.team+" üÜö "+jd.oppTeam.team+" ü§ñ</div>");
            $("#you").replaceWith(" <img src='"+jd.curTeam.pla_photo[0]+"' alt='' id='you' style='width: 90%; height:90%'>");
            $("#opp").replaceWith(" <img src='"+jd.oppTeam.pla_photo[0]+"' alt='' id='opp' style='width: 90%; height:90%'>");
            $(".img-responsive").replaceWith("<img src='" + jd.giff + "' class='img-responsive'>");
            $(".modal fade").show("slow").delay(5000).queue(function (n) {
              $(this).hide("slow"); n();
            });


          }
          else {
            console.log(jd);
            
            $(".wrong").replaceWith("<p class='wrong'>Wrong Answer!!</p>");
            $(".wrong").show("slow").delay(3500).queue(function (n) {
              $(this).hide("slow"); n();
            });
          }

        }
      });
    });
